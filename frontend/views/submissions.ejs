<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OnlineJudge</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
            margin-top: 80px;
            width: 80%;
            box-shadow: 20px 20px 50px grey;
            margin-left: 170px;
        }

        #customers td,
        #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #04AA6D;
            color: white;
        }
    </style>
</head>

<body>



    <div class="nav">
        <ul class='left'>
            <li><i class="fa fa-square" style="font-size:40px;color:rgb(255, 255, 255)">OnlineJudge</i></li>
            <li><a href='/'>
                    <h3>Home</h3>
                </a></li>
            <li><a href='/problem/<%= quesId %>'>
                    <h3>Problem Page</h3>
                </a></li>
        </ul>
        <ul class="right">
            <li><a href='/logout'>
                    <h3>Logout</h3>
                </a></li>
            <!-- <li><a href= '{% url "register"%}'><h3>Register</h3></a></li> -->

        </ul>
    </div>



    <table id="customers">
        <tr>
            <th>User Name</th>
            <th>Result</th>
            <th>Language</th>
            <th>Submitted At</th>
        </tr>
        <% submissions.forEach(item => { %>
        <% if (item.result != "Accepted") { %>
        <tr style='background-color:#FFCCCB'>
            <td><%= users[item.user] %></td>
            <td><%= item.result %></td>
            <td><%= item.language %></td>
            <td><%= item.date_created %></td>
        </tr>
        <% } else { %>
        <tr>
            <td><%= users[item.user] %></td>
            <td><%= item.result %></td>
            <td><%= item.language %></td>
            <td><%= item.date_created %></td>
        </tr>
        <% } %>

        <% }) %>
    </table>

















</body>

</html>